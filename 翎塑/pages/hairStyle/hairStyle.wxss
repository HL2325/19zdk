/* pages/hairStyle/hairStyle.wxss */
Page{
  background: #fafafa;
}
.clear{
  clear: both;
}
.left_nav{
  height: 90rpx;
  font-size: 30rpx;
  color: #333;
  text-align: center;
}
.nav_list{
  line-height: 90rpx;
  float: left;
  /* border-left: 6rpx solid rgba(0,0,0,0); */
}
.right_main{
  padding: 20rpx 0;
}
.default_list{
  width: 320rpx;
  height: 100rpx;
  background: #ccc;
  border-radius: 10rpx;
  margin-right: 30rpx;
  float: left;
}
.brickLayout--list-container{
  padding: 0;
}
.hair_card{
  width: 320rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
  position: relative;
}
.hair_card image {
  width: 100%;
  height: 100%;
}
.choLeft{
  background: #fff;
  font-weight: bold;
  color: #000;
  border-color: #000;
}
.no_data{
  width: 100%;
  margin-top: 220rpx;
}
.nd_pic{
  width: 240rpx;
  height: 240rpx;
  margin: 0 auto 10rpx;
}
.nd_pic image{
  width: 100%;
  height: 100%;
}
.nd_text{
  font-size: 30rpx;
  color:rgba(25,31,37,0.28);
  text-align: center;
}
.collect_icon{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 20rpx;
  bottom: 20rpx;
}
.collect_icon image {
  width: 100%;
  height: 100%;
}
.approve-btn_wrapper{
  color: #ccc !important;
}
.brickLayout--approve-btn .brickLayout--approve-btn_wrapper{
  color: #ccc !important;
}