/* pages/oddsCard/oddsCard.wxss */
.oddsCard{
  border: 1rpx solid rgba(0,0,0,0);
  padding: 0 40rpx;
}
.odds_card{
  /* min-height: 220rpx; */
  color: #333;
  /* background: #333; */
  margin-top: 20rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  /* padding: 30rpx 30rpx 0; */
}
.small_title{
  font-size: 24rpx;
}
.card_title{
  font-size: 32rpx;
  margin-bottom: 20rpx;
  margin-top: 10rpx;
  /* height: 80rpx; */
  font-weight: bold;
}
.card_price{
  font-size: 26rpx;
  margin-top: 20rpx;
}
.money_num{
  font-size: 46rpx;
  font-weight: bold;
}
.detail_text{
  font-size: 28rpx;
  color: #333;
  margin-top: 40rpx;
  font-weight: bold;
}
.detail_info{
  font-size: 30rpx;
  padding: 40rpx 20rpx;
  box-shadow:0px 8rpx 16rpx 0px #f0f0f0;
  background: #f0f0f0;
  border-radius: 10rpx;
  margin-top: 20rpx;
}
.detail_info image {
  width: 100% !important;
}

.bot{
  position: fixed;
  height: 120rpx;
  background: #fff;
  left: 0;
  right: 0;
  bottom: 0;
  border-top: 20rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
}
.open_card{
  color: #fff;
  background: #e47e64;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
}
.bot_money{
  font-size: 60rpx;
  font-weight: bold;
  color: #e47e64;
}
.moneys{
  color: #e47e64;
}
.pic_main{
  width: 100%;
}
.pic_main image{
  width: 100%;
}
.times_text{
  font-size: 28rpx;
}