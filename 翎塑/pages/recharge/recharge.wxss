/* pages/recharge/recharge.wxss */
.recharge{
  padding: 60rpx 40rpx 0;
}
.recharge_input{
  padding-bottom: 20rpx;
  margin-top: 20rpx;
  font-size: 36rpx;
  border-bottom: 1px solid #ccc;
}
.recharge_input input{
  padding-left: 20rpx;
}
.recharge_label{
  font-size: 26rpx;
  color: #ccc;
  margin-top: 20rpx;
}
.cho_card{
  margin-top: 30rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  flex-wrap: wrap;
}
.list_card{
  margin-bottom: 20rpx;
  border: 1px solid #333;
  text-align: center;
  padding: 10rpx 30rpx;
  border-radius: 10rpx;
}
.recharge_num{
  font-size: 36rpx;
}
.recharge_unit{
  font-size: 20rpx;
}
.recharge_award{
  font-size: 26rpx;
  color: #666;
}
.choColor {
  background: #333;
  color: #fff;
}
.submit_bar{
  height: 100rpx;
  padding-left:40rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  line-height: 100rpx;
}
.submit_btn{
  padding: 0 60rpx;
  background: #333;
  color: #fff;
  float: right;
}
.num_label{
  font-size: 24rpx;
  color: #666;
}
.num_unit{
  color: #e47e64;
  font-size: 28rpx;
  margin: 0 5rpx 0 20rpx;
}
.num_nums{
  font-size: 40rpx;
  font-weight: bold;
  color: #e47e64;
}
.num_left{
  float: left;
}
.choText {
  color: #fff;
}