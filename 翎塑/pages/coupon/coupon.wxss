/* pages/coupon/coupon.wxss */
.coupon{
  width: 100%;
  height: 100vh;
  background: #f6f6f6;
}
.coupon_nav{
  background: #fff;
  font-size: 30rpx;
  color: #999;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #f0f0f0;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}
.nav_list{
  width: 50%;
  line-height: 80rpx;
  text-align: center;
}
.choose_nav{
  border-bottom: 2px solid #333;
  padding: 0 20rpx 14rpx;
  color: #333;
  font-weight: 500;
}
.card_main{
  padding: 0 20rpx;
}
.card_list{
  margin-top: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  border-top: 15rpx solid #e47e64;
  padding: 20rpx 25rpx;
  box-shadow: #f0f0f0 0px 0px 4rpx 4rpx;
  position: relative;
}
.card_info{
  margin-top: 10rpx;
  display: flex;
  justify-content: flex-start;
}
.money_text{
  font-size: 60rpx;
  color: #70c4c8;
  font-weight: 900;
}
.money_fh{
  font-size: 26rpx;
  margin-right: 10rpx;
}
.money_use{
  font-size: 24rpx;
  color: #70c4c8;
  margin-top: 6rpx;
}
.card_money{
  text-align: center;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
}
.card_text{
  font-size: 28rpx;
  margin-left: 100rpx;
  width: 350rpx;
}
.card_info_text{
  color: #666;
  margin-bottom: 20rpx;
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}
.card_info_time{
  font-size: 24rpx;
  color: #999;
}
.use_coupon{
  font-size: 28rpx;
  text-align: center;
  border-top: 1px dashed #eee;
  margin-top: 20rpx;
  padding-top: 20rpx;
  color: #d64a45;
}
.top_icon{
  position: absolute;
  left: 0;
  top: 0;
  width: 80rpx;
  height: 40rpx;
  background: #ccc;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  line-height: 40rpx;
  background: linear-gradient(to right, #ef9a7b 0%,#d35543 100%);
  border-bottom-right-radius: 5px;
}
.alreadyColor {
  color: #989898;
}
.alreadyBack {
  border-color: #9a9a9a;
}
.alreadyLiner {
  background: linear-gradient(to right, #ccc 0%,#999 100%);
}