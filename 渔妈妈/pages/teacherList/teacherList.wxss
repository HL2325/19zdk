/* pages/teacherList/teacherList.wxss */
.teacher_list{
  padding: 0 20rpx 20rpx;
  min-height: 100vh;
  background:linear-gradient(180deg,rgba(255,255,255,1) 0%,rgba(239,241,245,0.74) 100%);
}
.order_title{
  color: #1F314A;
  font-size: 60rpx;
  line-height: 80rpx;
  padding-top: 130rpx;
  margin-bottom: 40rpx;
  position: relative;
}
.list_card{
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 4px 0px rgba(31,49,74,0.12);
  border-radius:10px;
  padding: 50rpx 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 20rpx;
}
.teacher_avatar{
  width: 100rpx;
  height: 100rpx;
}
.teacher_avatar image{
  width: 100%;
  height: 100%;
}
.teacher_name{
  font-size: 40rpx;
  font-weight: 500;
  color: #1F314A;
}
.teacher_desc{
  font-size: 28rpx;
  color: #999;
}
.cho_time{
  background: #18C9FF;
  color: #fff;
  border-radius:4px;
  font-size: 30rpx;
  padding: 10rpx 20rpx;
}
.specialist_search{
  width: 112rpx;
  height: 112rpx;
  position: absolute;
  right: 0;
  top: 40rpx;
}
.search_main{
  height: 100rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1111;
}
.search_top{
  height: 100rpx;
  padding:0 26rpx;
  background: #fff;
  box-shadow:0px -1px 22px 0px rgba(52,84,122,0.12);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.search_icon{
  width: 36rpx;
  height: 36rpx;
}
.search_top_back{
  background:rgba(243,244,248,1);
  border-radius:18px;
  height: 70rpx;
  display: flex;
  justify-content: flex-start;
  padding: 0 30rpx;
  align-items: center;
  /* width: 6600rpx; */
  width: 100%;
}
.no_text{
  text-align: center;
  margin-top: 100rpx;
  color: #1F314A;
  font-size: 36rpx;
}
.teacher_info{
  width: 370rpx;
}