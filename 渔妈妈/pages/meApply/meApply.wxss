/* pages/meApply/meApply.wxss */
.clear{
  clear: both;
}
.me_apply{
  padding: 0 40rpx;
  min-height: 100vh;
  background:linear-gradient(180deg,rgba(255,255,255,1) 0%,rgba(239,241,245,0.74) 100%);
}
.apply_title{
  color: #1F314A;
  font-size: 60rpx;
  line-height: 80rpx;
  padding-top: 60rpx;
  margin-bottom: 40rpx;
}
.course_list{
  margin-bottom: 20rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 4px 0px rgba(31,49,74,0.12);
  border-radius:10px;
  padding: 50rpx 30rpx 50rpx 50rpx;
  color: #1F314A;
}
.course_title{
  font-size: 40rpx;
  font-weight: 500;
  line-height: 46rpx;
  width: 580rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.course_teacher{
  font-size: 32rpx;
  font-weight: 500;
  line-height: 44rpx;
  color: #666;
  margin-top: 6rpx;
}
.course_time, .course_place{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #999;
  margin-top: 6rpx;
  width: 580rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.school_title{
  text-align: center;
  font-size: 38rpx;
  color: #1F314A;
  padding-top: 20rpx;
}
.school_desc{
  font-size: 30rpx;
  text-align: center;
  color: #666;
}
.noData_img{
  width: 240rpx;
  height: 240rpx;
  margin: 100rpx auto 10rpx;
}
.noData_img image{
  width: 100%;
  height: 100%;
}
.nodata_text{
  font-size: 30rpx;
  color:rgba(25,31,37,0.28);
  text-align: center;
}