/* pages/workDetail/workDetail.wxss */
page{
  background: #EFF1F5;
}
.work_detail{
  padding: 40rpx;
  padding-bottom: 100rpx;
}
.detail_card{
  background: #fff;
  border-radius:20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
}
.detail_name{
  color: #1F314A;
  font-weight: 500;
  text-align: center;
  margin-bottom: 20rpx;
}
.label_img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}
.label_img image{
  width: 100%;
  height: 100%;
}
.detail_phone{
  color:rgba(31,49,74,.8);
  font-size: 28rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.detail_list{
  width: 500rpx;
}
.desc_title{
  color:rgba(31,49,74,.9);
  font-size: 30rpx;
}
.desc_info{
  color:rgba(31,49,74,.8);
  font-size: 28rpx;
  margin-top: 10rpx;
}
.apply_btn{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90rpx;
  width: 100%;
  background: #6665FF;
  color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
}
.apply_icon{
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
.apply_icon image{
  width: 100%;
  height: 100%;
}
.no_apply{
  background: #ccc;
}