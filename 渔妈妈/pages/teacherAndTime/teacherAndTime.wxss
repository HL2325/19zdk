/* pages/teacherAndTime/teacherAndTime.wxss */
.teacherAndTime{
  padding: 0 40rpx;
  min-height: 100vh;
  background:linear-gradient(180deg,rgba(255,255,255,1) 0%,rgba(239,241,245,0.74) 100%);
}
.order_title{
  color: #1F314A;
  font-size: 60rpx;
  line-height: 80rpx;
  padding-top: 60rpx;
  margin-bottom: 40rpx;
  position: relative;
}
.list_card{
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 4px 0px rgba(31,49,74,0.12);
  border-radius:10px;
  padding: 50rpx 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 20rpx;
}
.teacher_avatar{
  width: 100rpx;
  height: 100rpx;
}
.teacher_avatar image{
  width: 100%;
  height: 100%;
}
.teacher_name{
  font-size: 40rpx;
  font-weight: 500;
  color: #1F314A;
}
.teacher_desc{
  font-size: 28rpx;
  color: #999;
}
.cho_time{
  background: #18C9FF;
  color: #fff;
  border-radius:4px;
  font-size: 30rpx;
  padding: 10rpx 20rpx;
}
.noData_img{
  width: 240rpx;
  height: 240rpx;
  margin: 100rpx auto 10rpx;
}
.noData_img image{
  width: 100%;
  height: 100%;
}
.nodata_text{
  font-size: 30rpx;
  color:rgba(25,31,37,0.28);
  text-align: center;
}