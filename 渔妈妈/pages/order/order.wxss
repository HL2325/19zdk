/**index.wxss**/
.home{
  min-height: 100vh;
  padding: 0 40rpx;
  background:linear-gradient(180deg,rgba(255,255,255,1) 0%,rgba(239,241,245,0.74) 100%);
}
.nav_bar{
  padding: 40rpx 120rpx 50rpx;
  display: flex;
  justify-content: space-between;
  font-size: 40rpx;
  line-height:28px;
  font-weight:500;
  color: #DADADA;
  position: relative;
}
.nav_bor{
  height: 6rpx;
  border-radius: 4rpx; 
}
.cho_nav{
  background: #6665FF;
}
.cho_text{
  color: #6665FF;
}
.card_list{
  margin-bottom: 20rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 4px 0px rgba(31,49,74,0.12);
  border-radius:10px;
  padding: 50rpx 30rpx 50rpx 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list_main{
  width: 500rpx;
}
.list_title{
  line-height: 46rpx;
  color: #1F314A;
  font-size: 40rpx;
  font-weight: 500;
}
.list_desc{
  margin-top: 5rpx;
  font-size: 28rpx;
  line-height: 44rpx;
  color: #666;
}
.heart_icon{
  width: 40rpx;
  height: 40rpx;
}
.heart_icon image{
  width: 100%;
  height: 100%;
}
.searchIcon{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  right: 0;
  top: 20rpx;
}
.searchIcon image{
  width: 100%;
  height: 100%;
}
.search_main{
  height: 100rpx;
}
.search_top{
  height: 100rpx;
  padding:0 26rpx;
  background: #fff;
  box-shadow:0px -1px 22px 0px rgba(52,84,122,0.12);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 11;
}
.search_icon{
  width: 36rpx;
  height: 36rpx;
}
.search_top_back{
  background:rgba(243,244,248,1);
  border-radius:18px;
  height: 70rpx;
  display: flex;
  justify-content: flex-start;
  padding: 0 30rpx;
  align-items: center;
  /* width: 600rpx; */
  width: 100%;
}
.noData_img{
  width: 240rpx;
  height: 240rpx;
  margin: 100rpx auto 10rpx;
}
.noData_img image{
  width: 100%;
  height: 100%;
}
.nodata_text{
  font-size: 30rpx;
  color:rgba(25,31,37,0.28);
  text-align: center;
}