/**index.wxss**/
.home{
  min-height: 100vh;
  padding: 0 40rpx;
  background:linear-gradient(180deg,rgba(255,255,255,1) 0%,rgba(239,241,245,0.74) 100%);
}
.nav_bar{
  padding: 40rpx 120rpx 50rpx;
  display: flex;
  justify-content: space-between;
  font-size: 40rpx;
  line-height:28px;
  font-weight:500;
  color: #DADADA;
}
.nav_bor{
  height: 6rpx;
  border-radius: 4rpx; 
}
.cho_nav{
  background: #6665FF;
}
.cho_text{
  color: #6665FF;
}
.card_list{
  margin-bottom: 20rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 4px 0px rgba(31,49,74,0.12);
  border-radius:10px;
  padding: 50rpx 30rpx 50rpx 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list_main{
  width: 500rpx;
}
.list_title{
  line-height: 46rpx;
  color: #1F314A;
  font-size: 40rpx;
  font-weight: 500;
}
.list_desc{
  margin-top: 5rpx;
  font-size: 28rpx;
  line-height: 44rpx;
  color: #666;
}
.heart_icon{
  width: 40rpx;
  height: 40rpx;
}
.heart_icon image{
  width: 100%;
  height: 100%;
}