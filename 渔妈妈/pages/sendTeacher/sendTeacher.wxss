/* pages/sendTeacher/sendTeacher.wxss */
.send_teacher{
  padding: 0 40rpx;
  min-height: 100vh;
  background:linear-gradient(180deg,rgba(255,255,255,1) 0%,rgba(239,241,245,0.74) 100%);
}
.order_title{
  color: #1F314A;
  font-size: 60rpx;
  line-height: 80rpx;
  padding-top: 60rpx;
  margin-bottom: 40rpx;
}
.list_place{
  height:128rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 12px 12px 0px rgba(52,84,122,0.06);
  border-radius:100px;
  border:1px solid rgba(31,49,74,0.11);
  padding: 0 50rpx;
  font-size: 36rpx;
  color: #1F314A;
  line-height: 128rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.send_order{
  width: 100%;
  height: 96rpx;
  background: #6665FF;
  color: #fff;
  font-size: 36rpx;
  line-height: 96rpx;
  text-align: center;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.send_icon{
  width: 42rpx;
  height: 42rpx;
  margin-right: 6rpx;
}

.rights{
  width: 40rpx;
  height: 40rpx;
}
.price{
  font-size: 38rpx;
  color: #1F314A;
  margin-bottom: 20rpx;
}