/* pages/choTime/choTime.wxss */
.cho_time{
  padding: 0 40rpx 20rpx;
  min-height: 100vh;
  background:linear-gradient(180deg,rgba(255,255,255,1) 0%,rgba(239,241,245,0.74) 100%);
}
.order_title{
  color: #1F314A;
  font-size: 60rpx;
  line-height: 80rpx;
  padding-top: 60rpx;
  margin-bottom: 40rpx;
}
.card_list{
  padding: 60rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 4px 0px rgba(31,49,74,0.12);
  border-radius:10px;
  margin-bottom: 24rpx;
}
.card_day{
  color: #1F314A;
  font-size: 40rpx;
  font-weight: 500;
  line-height: 56rpx;
}
.card_hour{
  font-size: 28rpx;
  color: #999;
  line-height: 40rpx;
}
.order_btn{
  width: 170rpx;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 34rpx;
  color: #fff;
  text-align: center;
  border-radius: 4px;
}
.addColor {
  background: #18C9FF;
}
.noaddColor {
  background: #DADADA;
}