/* pages/meOrder/meOrder.wxss */
.clear{
  clear: both;
}
.me_order{
  padding: 0 40rpx;
  min-height: 100vh;
  background:linear-gradient(180deg,rgba(255,255,255,1) 0%,rgba(239,241,245,0.74) 100%);
}
.order_title{
  color: #1F314A;
  font-size: 60rpx;
  line-height: 80rpx;
  padding-top: 60rpx;
  margin-bottom: 40rpx;
}
.order_list{
  margin-bottom: 20rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 4px 0px rgba(31,49,74,0.12);
  border-radius:20rpx;
  padding: 40rpx 30rpx 30rpx 40rpx;
  position: relative;
}
.top_icon{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 30rpx;
  top: 40rpx;
}
.top_icon image{
  width: 100%;
  height: 100%;
}
.olist_title{
  font-size:40rpx;
  font-weight:500;
  color:rgba(31,49,74,1);
  line-height:56rpx
}
.olist_time{
  color: #999;
  font-weight: 400;
  font-size: 28rpx;
}
.evaluate{
  width:164rpx;
  line-height: 52rpx;
  background:rgba(173,172,251,0.18);
  border-radius:15px;
  border:1px solid rgba(102,101,255,1);
  font-weight:500;
  color:rgba(102,101,255,1);
  font-size: 28rpx;
  text-align: center;
  margin-left: 20rpx;
}
.noData_img{
  width: 240rpx;
  height: 240rpx;
  margin: 100rpx auto 10rpx;
}
.noData_img image{
  width: 100%;
  height: 100%;
}
.nodata_text{
  font-size: 30rpx;
  color:rgba(25,31,37,0.28);
  text-align: center;
}
.bottom_btn{
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}