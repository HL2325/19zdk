/* pages/applyWork/applyWork.wxss */
page{
  background:linear-gradient(180deg,rgba(255,255,255,1) 0%,rgba(239,241,245,0.74) 100%);
}
.workList{
  padding: 40rpx;
  margin-bottom: 26rpx;
}
.apply_title{
  color: #1F314A;
  font-size: 60rpx;
  line-height: 80rpx;
  padding-top: 60rpx;
  margin-bottom: 40rpx;
}
.work_card{
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 4px 0px rgba(31,49,74,0.12);
  border-radius:10px;
  padding: 20rpx 40rpx;
  margin-bottom: 20rpx;
}
.work_title{
  color: #1F314A;
  font-size: 30rpx;
  width: 580rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
  font-weight: bold;
}
.work_info{
  color: #666;
  font-size: 28rpx;
  margin-top: 6rpx;
  width: 580rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.info_label{
  color: #1F314A;
}

.noData_img{
  width: 240rpx;
  height: 240rpx;
  margin: 100rpx auto 10rpx;
}
.noData_img image{
  width: 100%;
  height: 100%;
}
.nodata_text{
  font-size: 30rpx;
  color:rgba(25,31,37,0.28);
  text-align: center;
}