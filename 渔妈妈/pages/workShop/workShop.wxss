/* pages/workShop/workShop.wxss */
page{
  background: linear-gradient(180deg,rgba(255,255,255,1) 0%,rgba(239,241,245,0.74) 100%);
}
.workShop{
  padding: 0 40rpx;
  min-height: 100vh;
}
.workShop_title{
  color: #1F314A;
  font-size: 60rpx;
  line-height: 80rpx;
  padding-top: 60rpx;
  margin-bottom: 40rpx;
}

.local_list{
  margin-top: 20rpx;
  min-height: 100rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 12px 12px 0px rgba(52,84,122,0.06);
  border-radius: 100rpx;
  border:1px solid rgba(31,49,74,0.11);
  padding: 0 40rpx;
  display: flex;
  align-items: center;
}
.addClass {
  color: #ccc;
}
.place_top{
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  height: 100rpx;
  border-bottom: 1px solid #f0f0f0;
  align-items: center;
}
.cancel_btn, .true_btn{
  padding: 10rpx 20rpx;
  border: 1px solid #999;
  border-radius: 3px;
}
.true_btn{
  color: #6665FF;
  border-color: #6665FF;
}

.list_input{
  width: 100%;
  height: 100rpx;
}
.money_list {
  width: 70%;
}
.special_list{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.desc_list{
  min-height: 200rpx;
  border-radius: 20rpx;
  padding: 20rpx 40rpx;
}
.desc_list textarea{
  min-height: 200rpx;
}
.submit_btn{
  margin: 60rpx auto 0;
  width: 520rpx;
  height: 108rpx;
  text-align: center;
  line-height: 108rpx;
  background: #6665FF;
  border-radius: 100px;
  font-size: 38rpx;
  color: #fff;
}