/* pages/order/order.wxss */
.order{
  min-height: 100vh;
  padding: 0 40rpx 40rpx;
  background:linear-gradient(180deg,rgba(255,255,255,1) 0%,rgba(239,241,245,0.74) 100%);
}
.orderTitle{
  color: #1F314A;
  font-size: 60rpx;
  line-height: 80rpx;
  padding-top: 60rpx;
  margin-bottom: 70rpx;
}
.order_card{
  padding: 60rpx 50rpx 50rpx;
  background: #fff;
  box-shadow:0px 2px 4px 0px rgba(31,49,74,0.12);
  border-radius:10px;
  border:2px solid rgba(0, 0, 0, 0);
  display: flex;
  justify-content: space-between;
}
.ocard_info{
  width: 300rpx;
}
.ocard_title{
  font-size: 40rpx;
  color: #1F314A;
  line-height: 56rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}
.ocard_desc{
  color: #999;
  font-size: 28rpx;
  line-height: 40rpx;
}
.right_image{
  width: 200rpx;
  height: 200rpx;
}
.right_image image{
  width: 100%;
  height: 100%;
}