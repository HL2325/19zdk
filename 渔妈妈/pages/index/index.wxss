/* pages/order/order.wxss */
.order{
  min-height: 100vh;
  padding: 0 20rpx 20rpx;
  background:linear-gradient(180deg,rgba(255,255,255,1) 0%,rgba(239,241,245,0.74) 100%);
}
.all_order{
  display: flex;
  justify-content: space-between;
  width: 100%;
  flex-wrap: wrap;
}
.orderTitle{
  color: #1F314A;
  font-size: 60rpx;
  line-height: 80rpx;
  padding-top: 60rpx;
  margin-bottom: 70rpx;
}
.order_card{
  width: 39%;
  padding: 40rpx 30rpx;
  background: #fff;
  box-shadow:0px 2px 4px 0px rgba(31,49,74,0.12);
  border-radius:10px;
  border:2px solid rgba(0, 0, 0, 0);
  margin-bottom: 20rpx;
}
.card_infos{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.ocard_title{
  font-size: 40rpx;
  color: #1F314A;
  line-height: 56rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}
.ocard_desc{
  color: #999;
  font-size: 26rpx;
  line-height: 40rpx;
  width: 180rpx;
}
.right_image{
  width: 100rpx;
  height: 100rpx;
}
.right_image image{
  width: 100%;
  height: 100%;
}


.call_me{
  width: 90rpx;
  height: 90rpx;
  position: fixed;
  right: 20rpx;
  bottom: 20rpx;
  background: #6665FF;
  border-radius: 20rpx;
}
.call_meImg{
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx auto 0;
}
.call_meImg image{
  width: 100%;
  height: 100%;
}
.call_text{
  font-size: 22rpx;
  color: #fff;
  text-align: center;
}