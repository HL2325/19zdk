<!--pages/grow/grow.wxml-->
<wxs module="dateFr" src="../../utils/dateFr.wxs"></wxs>
<view class="grow">
  <!-- <view class="grow_title">打出去</view> -->
  <view class="mains">
    <view class="grow_main">
      <scroll-view scroll-y style="height: 100%;">
        <view style="margin-top: 20rpx;">
          <wux-timeline position="alternate">
            <view class="no_dates" wx:if="{{noDates}}">
              <wux-timeline-item dotStyle="border-color: #33cd5f; color: #33cd5f">
                  <view class="times" style="color: #33cd5f">YYYY-MM-DD</view>
                  <view style="color: #33cd5f">过去事件</view>
                </wux-timeline-item>
                <wux-timeline-item custom dotStyle="border-color: #ef473a; color: #ef473a">
                  <wux-icon slot="dot" type="ios-time" size="23" />
                  <view class="times" style="color:#ef473a;">YYYY-MM-DD</view>
                  <view style="color: #ef473a;">今天事件</view>
                </wux-timeline-item>
                <wux-timeline-item dotStyle="border-color: #4680ed; color: #4680ed">
                  <view style="color: #4680ed" class="times">YYYY-MM-DD</view>
                  <view style="color: #4680ed">将来事件</view>
                </wux-timeline-item>
            </view>
            <view>
              <block wx:for="{{items}}" wx:key="index">
                <wux-timeline-item wx:if="{{item.formTime > nowTime}}" bindtap="groupDetail" data-id="{{item.id}}">
                  <view style="color: #4680ed;" class="times">{{dateFr.getDate(item.time * 1000,'-','')}}</view>
                  <view style="color: #4680ed;">{{item.title}}</view>
                </wux-timeline-item>
                <wux-timeline-item bindtap="groupDetail" wx:if="{{item.formTime < nowTime}}" dotStyle="border-color: #33cd5f; color: #33cd5f" data-id="{{item.id}}">
                  <view class="times" style="color: #33cd5f">{{dateFr.getDate(item.time * 1000,'-','')}}</view>
                  <view style="color: #33cd5f">{{item.title}}</view>
                </wux-timeline-item>
                <wux-timeline-item bindtap="groupDetail" wx:if="{{item.formTime == nowTime}}" dotStyle="border-color: #ef473a; color: #ef473a" data-id="{{item.id}}">
                  <view style="color: #ef473a" class="times">{{dateFr.getDate(item.time * 1000,'-','')}}</view>
                  <view style="color: #ef473a">{{item.title}}</view>
                </wux-timeline-item>
              </block>
            </view>
          </wux-timeline>
        </view>
      </scroll-view>
      <view class="big_img">
        <image src="../../images/fz1.png"></image>
      </view>
      <view class="small_img">
        <image src="../../images/fz2.png"></image>
      </view>
      <view class="add_grow" bindtap="addGroup">
        <image src="../../images/addGroup.png"></image>
      </view>
    </view>
  </view>
</view>