/* pages/login/login.wxss */
.login{
  border: 1px solid rgba(0,0,0,0);
}
.login_logo{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid #f0f0f0;
  margin: 90rpx auto 0;
}
.login_logo image{
  width: 100%;
  height: 100%;
}
.title{
  font-size: 40rpx;
  color: #000;
  text-align: center;
  margin-top: 60rpx;
}
.title_small{
  text-align: center;
  font-size: 24rpx;
  color: #333;
  margin-top: 10rpx;
}
.auth_btn{
  width: 350rpx;
  background:linear-gradient(115deg,rgba(72,72,220,1) 0%,rgba(50,166,228,1) 100%);
  border-radius:56rpx;
  color: #fff;
  font-size: 32rpx;
  padding: 30rpx 0;
  margin: 100rpx auto 0;
  text-align: center;
}