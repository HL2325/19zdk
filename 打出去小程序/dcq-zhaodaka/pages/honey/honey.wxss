/* pages/honey/honey.wxss */
.honey_main{
  padding: 20rpx;
  box-shadow:0px 5px 9px 0px rgba(0,0,0,0.05);
}
.honey_list{
  padding: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
}

.no_data{
  width: 100%;
  margin-top: 220rpx;
}
.nd_pic{
  width: 240rpx;
  height: 240rpx;
  margin: 0 auto 10rpx;
}
.nd_pic image{
  width: 100%;
  height: 100%;
}
.nd_text{
  font-size: 30rpx;
  color:rgba(25,31,37,0.28);
  text-align: center;
}
.honey_head{
  font-size: 26rpx;
  font-weight: bold;
  padding: 20rpx 0;
  background: #fff;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}
.er_code{
  margin-top: 40rpx;
}
.code_text{
  font-size: 26rpx;
  color: #666;
  text-align: center;
}
.code_pic{
  width: 400rpx;
  height: 400rpx;
  margin: 10rpx auto;
}
.code_pic image {
  width: 100%;
  height: 100%;
}
.code_btn{
  font-size: 28rpx;
  color: #fff;
  margin: 20rpx auto 0;
  width: 600rpx;
  padding: 10rpx 0;
  background:linear-gradient(115deg,rgba(72,72,220,1) 0%,rgba(50,166,228,1) 100%);
  border-radius: 10rpx;
  text-align: center;
}