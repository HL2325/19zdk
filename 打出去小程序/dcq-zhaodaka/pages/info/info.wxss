/* pages/info/info.wxss */
.info{
  min-height: 100vh;
  padding-bottom: 20rpx;
  background:rgba(250,250,250,1);
}
.clear{
  clear: both;
}
.title {
  font-size: 28rpx;
  color: #203152;
  text-align: center;
  line-height: 70rpx;
  background: #fff;
}
.info_main{
  padding: 0 20rpx;
}
.card_title{
  font-size: 26rpx;
  font-weight: bold;
  background:linear-gradient(115deg,rgba(72,72,220,1) 0%,rgba(50,166,228,1) 100%);
  float: left;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
}
.swordForm{
  font-size: 28rpx;
  margin-top: 20rpx;
  color: #203152;
  box-shadow:0px 5px 9px 0px rgba(0,0,0,0.05);
}
.list_form{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  min-height: 80rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.label_list{
  margin-right: 20rpx;
  width: 160rpx;
  text-align: right;
  font-weight: bold;
}
.label{
  color: #f00;
}
.inputs{
  min-height: 80rpx;
  height: 100%;
  width: 500rpx;
  display: flex;
  align-items: center;
  /* border-bottom: 2rpx solid #f0f0f0; */
}
.inputs textarea{
  width: 500rpx;
}
.picker{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}
.noChoColor {
  color: #999;
}
.photo{
  width: 200rpx;
  height: 200rpx;
  background: #fff;
  border: 2rpx dashed #ccc;
  margin-top: 10rpx;
}
.photo_list{
  display: flex;
  justify-content: flex-start;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.icon_upload{
  width: 100rpx;
  height: 100rpx;
  padding: 50rpx;
}
.avatar_pic{
  width: 100%;
  height: 100%;
  position: relative;
}
.avatar_pic image {
  width: 100%;
  height: 100%;
}
.mask{
  width: 200rpx;
  height: 200rpx;
  background: rgba(0,0,0,.8);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.mask .handlePic{
  width: 50rpx;
  height: 50rpx;
}
.submit_btn{
  background:linear-gradient(115deg,rgba(72,72,220,1) 0%,rgba(50,166,228,1) 100%);
  border-radius: 56rpx;
  width: 400rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  line-height: 90rpx;
  margin: 40rpx auto;
}
.agreement{
  padding: 20rpx;
  font-size: 26rpx;
  color: #333;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.agreement_icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.agreement_icon image{
  width: 100%;
  height: 100%;
}
.zhuyi{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}
.zhuyi image{
  width: 100%;
  height: 100%;
}
.tip_text{
  font-size: 24rpx;
  color: #ccc;
  padding: 0 20rpx;
}
.info_texts{
  font-size: 28rpx;
  text-align: left;
}
.me_btn{
  background: #d55048;
  line-height: 70rpx;
  font-size: 32rpx;
  color: #fff;
  border-radius: 6rpx;
  margin-top: 40rpx;
}
.agree_list{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.list_me{
  font-size: 28rpx;
}