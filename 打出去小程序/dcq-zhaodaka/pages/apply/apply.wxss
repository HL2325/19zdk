/* pages/apply/apply.wxss */
page{
  background: #FAFAFA;
}
.apply{
  padding: 30rpx 40rpx 0;
}
.logo{
  width: 100%;
  height: 250rpx;
}
.logo image{
  width: 100%;
  height: 100%;
}
.apply_header{
  margin-top: 20rpx;
}
.header_pic{
  width: 108rpx;
  height: 80rpx;
}
.header_pic image{
  width: 100%;
  height: 100%;
}
.header_title{
  color: #203152;
  font-size:28rpx;
}
.apply_status{
  display: flex;
  justify-content: space-between;
  margin-top: 28rpx;
  align-items: center;
}
.state_list{
  color: #fff;
  border-radius: 16rpx;
  font-size: 24rpx;
  width: 160rpx;
  padding: 16rpx 0;
  text-align: center;
}
.state_make{
  background: #3E72E0;
}
.state_padding{
  background: #FE5955;
}
.state_endding{
  background: #D4D4D4;
}
.apply_type{
  color: #203152;
  font-size: 28rpx;
  margin-right: 80rpx;
  font-weight: bold;
}
.apply_info{
  margin-top: 20rpx;
  color: #353b50;
  font-size: 26rpx;
}
.apply_list{
  margin-bottom: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.date_icon{
  margin-right: 14rpx;
}
.date_icon image{
  width: 100%;
  height: 100%;
}
.info_card{
  margin-top: 20rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 5px 9px 0px rgba(0,0,0,0.05);
  border-radius:8rpx;
  padding: 10rpx 20rpx;
}
.apply_remark{
  color: #353b50;
  font-size: 26rpx;
  margin-top: 20rpx;
  min-height: 200rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 5px 9px 0px rgba(0,0,0,0.05);
  border-radius:8rpx;
  padding: 10rpx 20rpx;
}
.apply_btn{
  text-align: center;
  margin-top: 34rpx;
  width: 580rpx;
  background:linear-gradient(115deg,rgba(72,72,220,1) 0%,rgba(50,166,228,1) 100%);
  border-radius: 70rpx;
  margin: 34rpx auto;
  line-height: 44rpx;
  padding: 20rpx;
  color: #fff;
  font-size: 30rpx;
}
.infos{
  width: 500rpx;
}
.labels{
  width: 130rpx;
  text-align: right;
}
.people_card{
  font-size: 26rpx;
  color: #203152;
}
.people_title{
  font-weight: bold;
  margin-bottom: 20rpx;
}
.people_list{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0; 
}
.people_phote{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2rpx dashed #f0f0f0;
}
.people_phote image {
  width: 100%;
  height: 100%;
}
.people_icon{
  width: 50rpx;
  height: 50rpx;
}
.people_icon image{
  width: 100%;
  height: 100%;
}
.consider_list{
  width: 25%;
  text-align: center;
  margin-bottom: 20rpx;
}
.consider_img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2rpx dashed #f0f0f0;
  overflow: hidden;
  margin: 0 auto 10rpx;
}
.consider_img image{
  width: 100%;
  height: 100%;
}
.consider_card{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.referee_btn{
  color: #fff;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  background:linear-gradient(115deg,rgba(72,72,220,1) 0%,rgba(50,166,228,1) 100%);
}
.cancel_consider{
  font-size: 22rpx;
  width: 120rpx;
  padding: 8rpx 0;
  background:linear-gradient(115deg,rgba(72,72,220,1) 0%,rgba(50,166,228,1) 100%);
  color: #fff;
  border-radius: 6rpx;
  margin: 0 auto;
}
.small_main{
  padding-bottom: 50rpx;
  display: flex;
  justify-content: space-between;
  color: #fff;
  text-align: center;
}
.small_btn{
  /* font-size: 28rpx;
  padding: 10rpx 40rpx;
  border-radius: 20rpx; */
  text-align: center;
  margin-top: 34rpx;
  width: 580rpx;
  /* background:linear-gradient(115deg,rgba(72,72,220,1) 0%,rgba(50,166,228,1) 100%); */
  border-radius: 70rpx;
  margin: 0 auto 40rpx;
  line-height: 44rpx;
  padding: 20rpx;
  color: #fff;
  font-size: 30rpx;
}
.consider_btn{
  background: #3E72E0;
}
.voluntary_btn{
  background: #FE5955;
}
.player_btn{
  background: #f5cb45;
}
.collect{
  width: 50rpx;
  height: 50rpx;
  float: right;
}
.collect image{
  width: 100%;
  height: 100%;
}
.clear{
  clear: both;
}