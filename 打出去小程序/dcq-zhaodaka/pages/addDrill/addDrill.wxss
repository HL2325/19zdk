/* pages/addDrill/addDrill.wxss */
Page{
  background: #FAFAFA;
}
.clear{
  clear: both;
}
.addDrill{
  padding: 20rpx;
}
.title{
  font-size: 26rpx;
  background:linear-gradient(115deg,rgba(72,72,220,1) 0%,rgba(50,166,228,1) 100%);
  color: #fff;
  padding: 10rpx 20rpx;
  font-weight: bold;
  border-radius: 10rpx;
  text-align: center;
  float: left;
}
.list_main{
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #203152;
  box-shadow: 0px 5px 9px 0px rgba(0,0,0,0.05);
  margin-bottom: 20rpx;
}
.drill_list{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  min-height: 80rpx;
}
.label{
  width: 200rpx;
  font-weight: bold;
  text-align: right;
}
.inputs{
  width: 500rpx;
}
.inputs textarea{
  width: 500rpx;
}
.label_text{
  color: #f00;
}
.noChoColor{
  color: #999;
}
.address{
  margin: 10rpx auto;
}
.address textarea{
  width: 560rpx;
  border: 2rpx solid #f0f0f0;
  min-height: 100rpx;
  padding: 20rpx;
  margin: 0 auto;
  border-radius: 10rpx;
}
.photo_list{
  display: flex;
  justify-content: flex-start;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.icon_upload{
  width: 100rpx;
  height: 100rpx;
  padding: 50rpx;
}
.avatar_pic{
  width: 100%;
  height: 100%;
  position: relative;
}
.avatar_pic image {
  width: 100%;
  height: 100%;
}
.photo{
  width: 200rpx;
  height: 200rpx;
  background: #fff;
  border: 2rpx dashed #ccc;
  margin-top: 10rpx;
}
.note_text{
  width: 460rpx !important;
  min-height: 100rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 10rpx;
  padding: 20rpx;
}
.text_area{
  margin-top: 20rpx;
  padding-bottom: 40rpx;
}
.send_active{
  background:linear-gradient(115deg,rgba(72,72,220,1) 0%,rgba(50,166,228,1) 100%);
  color: #fff;
  border-radius: 56rpx;
  text-align: center;
  width: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
}