/* pages/groupDetail/groupDetail.wxss */
Page{
  background: #fafafa;
}
.clear{
  clear: both;
}
.group_detail{
  padding: 30rpx;
  color: #203152;
  font-size: 38rpx;
}
.title{
  font-weight: bold;
}
.info{
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #353B50;
  line-height: 40rpx;
}
.detail_type{
  font-size: 26rpx;
  margin-top: 10rpx;
  color: #353B50;
}
.detail_pic{
  margin-top: 20rpx;
}
.pic_list{
  width: 320rpx;
  height: 220rpx;
  float: left;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.pic_list image{
  width: 100%;
  height: 100%;
}
.pic_list:nth-of-type(2n) {
  float: right;
}
.bigTitle{
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.title_icon{
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}
.title_icon image{
  width: 100%;
  height: 100%;
}
.bigTitle_text{
  color: #3E72E0;
  font-size: 36rpx;
  font-weight: bold;
}
.paiming{
  text-align: center;
  margin-top: 20rpx;
  font-weight: bold;
  font-size: 32rpx;
}
.group_main{
  margin-top: 20rpx;
  background:rgba(255,255,255,1);
  border-radius: 16rpx;
  padding: 24rpx 30rpx 40rpx;
}
.group_main{
  font-size: 30rpx;
}
.group_title{
  text-align: center;
  font-weight: bold;
}
.group_top{
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}
.group_second{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.group_second_list, .group_top_list{
  width: 16.6666%;
  text-align: center;
}
.group_card{
  margin-top: 20rpx;
  padding: 40rpx 100rpx;
  background:rgba(245,245,246,.5);
  border-radius: 16rpx
}
.card_list{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.list_name{
  width: 33.33%;
  text-align: center;
  color: #8F98A8;
}
.list_vs{
  font-size: 36rpx;
  font-weight: bold;
  color: #203152;
}
.rj_text{
  margin-top: 20rpx;
  color: #8F98A8;
  font-size: 28rpx;
  line-height: 40rpx;
}