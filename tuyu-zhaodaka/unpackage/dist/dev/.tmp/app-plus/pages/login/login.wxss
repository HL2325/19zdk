.login {
  min-height: 100vh;
  background: -webkit-gradient(linear, left top, left bottom, from(#d18289), color-stop(20%, #df7261), to(#642c36));
  background: -o-linear-gradient(top, #d18289 0%, #df7261 20%, #642c36 100%);
  background: linear-gradient(to bottom, #d18289 0%, #df7261 20%, #642c36 100%);
}
.login .logo {
    width: 100%;
    height: 300rpx;
}
.login .content {
    padding: 0 100rpx;
}
.login .content .login_phone,
    .login .content .login_code {
      width: 100%;
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-pack: start;
      -webkit-justify-content: flex-start;
          -ms-flex-pack: start;
              justify-content: flex-start;
      margin-bottom: 40rpx;
}
.login .content .login_phone .icon-input-phone,
      .login .content .login_code .icon-input-phone {
        width: 40rpx;
        height: 40rpx;
        margin-top: 15rpx;
}
.login .content .login_phone .login_phone_input,
      .login .content .login_code .login_phone_input {
        width: 100%;
        height: 60rpx;
        border-bottom: 1px solid #fff;
        margin-left: 30rpx;
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-pack: justify;
        -webkit-justify-content: space-between;
            -ms-flex-pack: justify;
                justify-content: space-between;
}
.login .content .login_phone .login_phone_input input,
        .login .content .login_code .login_phone_input input {
          height: 100%;
          color: #fff;
          padding-left: 10rpx;
          font-size: 32rpx;
}
.login .content .login_phone .login_phone_input .get_code,
        .login .content .login_code .login_phone_input .get_code {
          font-size: 24rpx;
          text-align: center;
          border-radius: 0;
          background: #e65542;
          color: #fff;
          width: 200rpx;
}
.login .content .login_phone .login_phone_input uni-button:after,
        .login .content .login_code .login_phone_input uni-button:after {
          border: none !important;
          border-radius: 0 !important;
}
.login .login_btn {
    font-size: 36rpx;
    color: #fff;
    background: #e65542;
    width: 400rpx;
    margin: 60rpx auto 20rpx;
    padding: 20rpx 0;
    text-align: center;
}
.login .login_question {
    color: #d5b7ba;
    font-size: 26rpx;
    text-align: center;
}
.login .login_question .login_q_text {
      border-bottom: 1px solid #d5b7ba;
      padding: 5rpx;
}
.login .bottom_card {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
        -ms-flex-pack: center;
            justify-content: center;
    margin-top: 30rpx;
}
.login .bottom_card .tel_me {
      width: 190rpx;
      height: 90rpx;
}
.login .bottom_card .first_card {
      background: #cb7264;
      margin-right: 10rpx;
}
.login .bottom_card .second_card {
      background: #5760a9;
      margin-left: 10rpx;
}
.login .bottom_card .card_text {
      font-size: 26rpx;
      color: #d5b7ba;
      margin-top: 5rpx;
}
.login .bottom_text {
    position: absolute;
    width: 100%;
    bottom: 100rpx;
    text-align: center;
    font-size: 28rpx;
}
.login .bottom_text .en_text {
      color: #e65542;
}
.login .bottom_text .ch_text {
      color: #fff;
}

