.login {
  background: #7a8fed;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: url('http://project.zhaodaka.cn/static/loginback.png') no-repeat;
  background-size: 100% 100%;
}
.login .status_bar {
  height: var(--status-bar-height);
  width: 100%;
}
.login .en_name {
  text-align: center;
  font-size: 72rpx;
  color: #fff;
  margin-top: 48px;
}
.login .eg_name {
  text-align: center;
  font-size: 44rpx;
  color: #fff;
}
.login .login_pic {
  width: 100%;
  margin: 0 auto 60rpx;
}
.login .login_pic image {
  width: 100%;
}
.login .login_text {
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  margin-bottom: 80rpx;
}
.login .login_btn {
  width: 360rpx;
  height: 100rpx;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  border-radius: 50rpx;
  background: #ffba2a;
  -webkit-box-shadow: 0px 2px 6px 0px rgba(245, 166, 35, 0.35);
          box-shadow: 0px 2px 6px 0px rgba(245, 166, 35, 0.35);
  margin: 0 auto;
}
.login .login_info {
  width: 100%;
  font-size: 24rpx;
  color: #9CBBFF;
  text-align: center;
  position: fixed;
  bottom: 20px;
}

