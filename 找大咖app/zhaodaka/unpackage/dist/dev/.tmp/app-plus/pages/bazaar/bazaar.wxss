.bazaar .search {
  width: 640rpx;
  height: 60rpx;
  border: 1px solid #C7D8FE;
  border-radius: 26px;
  margin: 15rpx auto 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.bazaar .search .search_icon {
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx 18rpx 8rpx 26rpx;
}
.bazaar .search .search_input {
  font-size: 28rpx;
  color: #76A1FF;
  height: 60rpx;
  width: 400rpx;
}
.bazaar .bazaar_main {
  padding: 0 38rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
      -ms-flex-pack: start;
          justify-content: flex-start;
  -webkit-flex-wrap: wrap;
      -ms-flex-wrap: wrap;
          flex-wrap: wrap;
}
.bazaar .bazaar_main .bazaar_list {
  width: 124rpx;
  margin-bottom: 40rpx;
  margin-right: 58rpx;
  text-align: center;
  font-size: 24rpx;
}
.bazaar .bazaar_main .bazaar_list .list_pic {
  width: 124rpx;
  height: 124rpx;
  border-radius: 50%;
  overflow: hidden;
}
.bazaar .bazaar_main .bazaar_list .list_pic image {
  width: 100%;
  height: 100%;
}
.bazaar .bazaar_main .bazaar_list .list_title {
  margin-top: 10rpx;
  color: #333;
  line-height: 34rpx;
}
.bazaar .bazaar_main .bazaar_list .attention {
  color: #FFBA2A;
  line-height: 34rpx;
  margin-top: 5rpx;
}
.bazaar .bazaar_main .bazaar_list .attention_btn {
  color: #fff;
  width: 100rpx;
  background: #C7D8FE;
  text-align: center;
  line-height: 34rpx;
  padding: 4rpx 0;
  margin: 10rpx auto 0;
  border-radius: 20rpx;
}
.bazaar .bazaar_main .bazaar_list:nth-of-type(4n) {
  margin-right: 0;
}

